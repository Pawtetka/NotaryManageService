@model IEnumerable<NotaryDatabaseDLL.Models.WorkerService>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center">Workers services</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Worker)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Service.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Worker.FirstName)
            </td>
            <td>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.WorkerServiceId">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.WorkerServiceId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.WorkerServiceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back to List</a>
</div>
